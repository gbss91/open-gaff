generator client {
  provider = "prisma-client-js"
  output   = "../src/server/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id            Int      @id @default(autoincrement())
  address_1     String
  address_2     String?
  address_3     String?
  address_4     String?
  address_5     String?
  county        String
  eircode       String   @unique
  bedroom_no    Int
  is_registered Boolean  @default(true)
  rents         Rent[]
  reviews       Review[]
}

model Rent {
  id          Int      @id @default(autoincrement())
  rent_value  Int
  rent_period String
  property_Id Int
  property    Property @relation(fields: [property_Id], references: [id])
}

model Review {
  id          Int      @id @default(autoincrement())
  rating      Int
  review      String?
  property_Id Int
  property    Property @relation(fields: [property_Id], references: [id])
}
